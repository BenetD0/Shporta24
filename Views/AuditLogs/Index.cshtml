@model IEnumerable<Shporta24.Models.AuditLog>

@{
    ViewData["Title"] = "Audit Logs";
}

<h1>Audit Logs</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Action</th>
            <th>Performed By</th>
            <th>Created At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>@log.Id</td>
                <td>@log.Action</td>
                <td>@log.PerformedBy</td>
                <td>@log.CreatedAt.ToString("g")</td>
            </tr>
        }
    </tbody>
</table>
