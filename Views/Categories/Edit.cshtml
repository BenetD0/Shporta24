@model Shporta24.Models.Category
@{
    Layout = "_LayoutAdmin";
}
<h2>Edit Kategori</h2>

<form method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group" style="margin-bottom:15px;">
        <label>Name</label>
        <input name="Name" value="@Model.Name" class="form-control" style="padding:8px; border:1px solid #ccc; border-radius:4px;" />
    </div>

    <button type="submit" class="btn btn-success mt-3" style="padding:8px 16px; border-radius:4px;">
        Save
    </button>
</form>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary" style="padding:8px 16px; border-radius:4px;">Back to List</a>
</div>
