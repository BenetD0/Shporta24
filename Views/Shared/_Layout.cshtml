<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shporta24</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- ===================== NAVBAR ===================== -->
    <!-- ===================== NAVBAR ===================== -->
<nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">Shporta24</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-center" id="navbarContent">

            <!-- ===================== SEARCH BOX MODERN ===================== -->
                <form class="d-flex w-50" asp-controller="Home" asp-action="Index" method="get">
                    <div class="input-group">
                        <input type="text" class="form-control" name="search" placeholder="Kërko produkte..." aria-label="Search"
                               value="@(ViewBag.SearchText ?? "")" />

                        <select class="form-select" name="categoryId" style="max-width: 150px;">
                            <option value="">Të gjitha</option>
                            @if (ViewBag.Categories != null)
                            {
                                foreach (var cat in ViewBag.Categories)
                                {
                                    if (ViewBag.SelectedCategoryId != null && ViewBag.SelectedCategoryId == cat.Id)
                                    {
                                        <option value="@cat.Id" selected>@cat.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@cat.Id">@cat.Name</option>
                                    }
                                }
                            }
                        </select>

                        <button class="btn btn-outline-secondary" type="submit">
                            🔍
                        </button>
                    </div>
                </form>

            <!-- ===================== LOGIN / LOGOUT & ADMIN ===================== -->
            <ul class="navbar-nav ms-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-danger fw-bold" asp-controller="Dashboard" asp-action="Index">Admin Dashboard</a>
                        </li>
                    }
                    <li class="nav-item">
                        <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
                            <button type="submit" class="btn btn-link nav-link">Logout (@User.Identity.Name)</button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>

    <!-- ===================== MAIN CONTENT ===================== -->
    <div class="container-fluid">
        <div class="row">
            <!-- LEFT SIDEBAR / CATEGORIES -->
            <div class="col-md-2 bg-light p-3">
                <h5>Kategoritë</h5>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link @(ViewBag.SelectedCategoryId == null ? "fw-bold" : "")"
                           asp-controller="Home" asp-action="Index">Të gjitha produktet</a>
                    </li>
                    @if (ViewBag.Categories != null)
                    {
                        foreach (var cat in ViewBag.Categories)
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewBag.SelectedCategoryId == cat.Id ? "fw-bold" : "")"
                                   asp-controller="Home"
                                   asp-action="Index"
                                   asp-route-categoryId="@cat.Id">@cat.Name</a>
                            </li>
                        }
                    }
                </ul>
            </div>

            <!-- MAIN VIEW -->
            <main role="main" class="col-md-10 px-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- ===================== FOOTER ===================== -->
    <footer class="border-top footer text-muted mt-3">
        <div class="container">
            &copy; 2025 - Shporta24
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
