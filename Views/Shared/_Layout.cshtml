<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shporta24</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        /* Hero Section Styles */
        .hero-section {
            background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('https://images.unsplash.com/photo-1607082350899-7e105aa886ae?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 500px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-align: center;
            margin: -1.5rem -12px 2rem -12px;
            padding: 0 20px;
            position: relative;
        }

        .hero-content {
            max-width: 800px;
            z-index: 1;
        }

            .hero-content h1 {
                font-size: 3rem;
                font-weight: bold;
                margin-bottom: 1rem;
                text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
            }

            .hero-content p {
                font-size: 1.25rem;
                margin-bottom: 2rem;
                text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
            }

        .hero-btn {
            background-color: #0d6efd;
            color: white;
            padding: 12px 30px;
            border-radius: 50px;
            font-weight: bold;
            font-size: 1.1rem;
            border: none;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

            .hero-btn:hover {
                background-color: #0b5ed7;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.2);
                color: white;
            }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .hero-section {
                height: 400px;
                margin: -1rem -12px 1.5rem -12px;
            }

            .hero-content h1 {
                font-size: 2.2rem;
            }

            .hero-content p {
                font-size: 1.1rem;
            }
        }

        @@media (max-width: 576px) {
            .hero-section {
                height: 350px;
            }

            .hero-content h1 {
                font-size: 1.8rem;
            }
        }

        /* Main content adjustments for hero section */
        .main-with-hero {
            margin-top: 2rem;
        }
    </style>
</head>
<body>
    <!-- ===================== NAVBAR ===================== -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">Shporta24</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-center" id="navbarContent">

                <!-- ===================== SEARCH BOX MODERN ===================== -->
                <form class="d-flex w-50" asp-controller="Home" asp-action="Index" method="get">
                    <div class="input-group">
                        <input type="text" class="form-control" name="search" placeholder="Kërko produkte..." aria-label="Search"
                               value="@(ViewBag.SearchText ?? "")" />

                        <select class="form-select" name="categoryId" style="max-width: 150px;">
                            <option value="">Të gjitha</option>
                            @if (ViewBag.Categories != null)
                            {
                                foreach (var cat in ViewBag.Categories)
                                {
                                    if (ViewBag.SelectedCategoryId != null && ViewBag.SelectedCategoryId == cat.Id)
                                    {
                                        <option value="@cat.Id" selected>@cat.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@cat.Id">@cat.Name</option>
                                    }
                                }
                            }
                        </select>

                        <button class="btn btn-outline-secondary" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </form>

                <!-- ===================== LOGIN / LOGOUT & ADMIN ===================== -->
                <ul class="navbar-nav ms-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-primary fw-semibold" asp-controller="Dashboard" asp-action="Index">
                                    <i class="bi bi-speedometer2 me-1"></i> Admin Dashboard
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <form method="post" asp-area="Identity"
                                  asp-page="/Account/Logout"
                                  asp-route-returnUrl="/"
                                  class="d-inline">
                                <button type="submit" class="btn btn-link nav-link">
                                    Logout (@User.Identity.Name)
                                </button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-area="Identity"
                               asp-page="/Account/Login">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Login
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- ===================== HERO SECTION ===================== -->
    @if (IsSectionDefined("HeroSection"))
    {
        @RenderSection("HeroSection", required: false)
    }
    else if (ViewContext.RouteData.Values["controller"]?.ToString() == "Home" &&
    ViewContext.RouteData.Values["action"]?.ToString() == "Index")
    {
        <!-- Default Hero Section for Home Page -->
        <section class="hero-section">
            <div class="hero-content">
                <h1>Zbritje të jashtëzakonshme deri në 70%</h1>
                <p class="lead">Blerje online të shpejta me çmime të pabesueshme. Më shumë se 10,000 produkte në dispozicion!</p>
                <a href="#products" class="hero-btn">
                    <i class="bi bi-arrow-down-circle me-2"></i> Shiko Produktet
                </a>
            </div>
        </section>
    }

    <!-- ===================== MAIN CONTENT ===================== -->
    <div class="container-fluid main-with-hero">
        <div class="row">
            <!-- LEFT SIDEBAR / CATEGORIES -->
            <div class="col-md-2 bg-light p-3">
                <h5><i class="bi bi-grid-3x3-gap me-2"></i>Kategoritë</h5>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link @(ViewBag.SelectedCategoryId == null ? "fw-bold text-primary" : "text-dark")"
                           asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door me-2"></i>Të gjitha produktet
                        </a>
                    </li>
                    @if (ViewBag.Categories != null)
                    {
                        foreach (var cat in ViewBag.Categories)
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewBag.SelectedCategoryId == cat.Id ? "fw-bold text-primary" : "text-dark")"
                                   asp-controller="Home"
                                   asp-action="Index"
                                   asp-route-categoryId="@cat.Id">
                                    <i class="bi bi-tag me-2"></i>@cat.Name
                                </a>
                            </li>
                        }
                    }
                </ul>
            </div>

            <!-- MAIN VIEW -->
            <main role="main" class="col-md-10 px-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- ===================== FOOTER ===================== -->
    <footer class="border-top mt-5 bg-dark text-light">
        <div class="container py-5">
            <div class="row gy-4">

                <!-- Brand -->
                <div class="col-md-4">
                    <h5 class="text-white">Shporta24</h5>
                    <p class="small text-light opacity-75">
                        Platformë moderne për blerje online. Produkte cilësore, çmime të mira dhe dërgesë e shpejtë.
                    </p>
                </div>

                <!-- Quick Links -->
                <div class="col-md-2">
                    <h6 class="text-white">Navigimi</h6>
                    <ul class="list-unstyled small">
                        <li><a href="/" class="text-light text-decoration-none opacity-75">Ballina</a></li>
                        <li><a href="/products" class="text-light text-decoration-none opacity-75">Produktet</a></li>
                        <li><a href="/about" class="text-light text-decoration-none opacity-75">Rreth nesh</a></li>
                        <li><a href="/contact" class="text-light text-decoration-none opacity-75">Kontakti</a></li>
                    </ul>
                </div>

                <!-- Support -->
                <div class="col-md-3">
                    <h6 class="text-white">Ndihmë</h6>
                    <ul class="list-unstyled small">
                        <li><a href="/faq" class="text-light text-decoration-none opacity-75">FAQ</a></li>
                        <li><a href="/privacy" class="text-light text-decoration-none opacity-75">Politika e Privatësisë</a></li>
                        <li><a href="/terms" class="text-light text-decoration-none opacity-75">Kushtet e Përdorimit</a></li>
                    </ul>
                </div>

                <!-- Contact -->
                <div class="col-md-3">
                    <h6 class="text-white">Kontakti</h6>
                    <p class="small mb-1 opacity-75">📧 support@shporta24.com</p>
                    <p class="small mb-1 opacity-75">📞 +383 44 123 456</p>
                    <p class="small opacity-75">📍 Kosovë</p>
                </div>

            </div>

            <hr class="my-4 border-light opacity-25">

            <!-- Bottom -->
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center small opacity-75">
                <div>
                    &copy; 2025 <strong>Shporta24</strong>. Të gjitha të drejtat e rezervuara.
                </div>
                <div class="mt-2 mt-md-0">
                    <a href="#" class="text-light me-3 text-decoration-none">Facebook</a>
                    <a href="#" class="text-light me-3 text-decoration-none">Instagram</a>
                    <a href="#" class="text-light text-decoration-none">LinkedIn</a>
                </div>
            </div>
        </div>
    </footer>




    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>