@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityUser>
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Lista e Userave";
}

<h2>Lista e Userave</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New User</a>
</p>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            var isAdmin = (await UserManager.GetRolesAsync(user)).Contains("Admin");
            <tr>
                <td>@user.Email</td>
                <td>@(isAdmin ? "Admin" : "User")</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                    <a class="btn btn-secondary btn-sm" asp-action="ResetPassword" asp-route-id="@user.Id">Reset Password</a>
                </td>
            </tr>
        }
    </tbody>
</table>
