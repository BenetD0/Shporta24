@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5 dashboard-wrapper">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-5 dashboard-header">
        <div>
            <h2 class="dashboard-title">Admin Dashboard</h2>
            <p class="dashboard-subtitle">System overview & statistics</p>
        </div>
        <span class="dashboard-badge">Enterprise Panel</span>
    </div>

    <div class="row g-4">
        <!-- Products -->
        <div class="col-md-4">
            <div class="dashboard-card gradient-blue">
                <div class="card-body">
                    <div>
                        <h6>Products</h6>
                        <h2>@ViewBag.TotalProducts</h2>
                    </div>
                    <i class="bi bi-box-seam"></i>
                </div>
            </div>
        </div>

        <!-- Categories -->
        <div class="col-md-4">
            <div class="dashboard-card gradient-green">
                <div class="card-body">
                    <div>
                        <h6>Categories</h6>
                        <h2>@ViewBag.TotalCategories</h2>
                    </div>
                    <i class="bi bi-tags"></i>
                </div>
            </div>
        </div>

        <!-- Users -->
        <div class="col-md-4">
            <div class="dashboard-card gradient-dark">
                <div class="card-body">
                    <div>
                        <h6>Users</h6>
                        <h2>@ViewBag.TotalUsers</h2>
                    </div>
                    <i class="bi bi-people"></i>
                </div>
            </div>
        </div>
    </div>
</div>
