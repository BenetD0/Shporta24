@model IEnumerable<Shporta24.Models.Product>

@{
    ViewData["Title"] = "Home";
}

<!-- ===================== HERO SECTION ME BACKGROUND FOTO ===================== -->
@section HeroSection {
    <section class="hero-section">
        <div class="hero-content">
            <h1>Shporta24 - Blerje Online të Sigurta</h1>
            <p class="lead">Zbritje të mëdha në të gjitha kategoritë</p>
            <a href="#produktet" class="hero-btn">
                <i class="bi bi-arrow-down-circle me-2"></i> Shiko Produktet
            </a>
        </div>
    </section>
}

<!-- ===================== PRODUKTET ===================== -->
<div class="row" id="produktet">
    @foreach (var product in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm">
                @if (!string.IsNullOrEmpty(product.ImageUrl))
                {
                    <img class="card-img-top" src="@product.ImageUrl" alt="@product.Name" style="height:200px; object-fit:cover;" />
                }
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Price.ToString("0.00") €</p>

                </div>
            </div>
        </div>
    }
</div>