@{
    ViewData["Title"] = "Admin Dashboard";
}
@{
    Layout = "_LayoutAdmin";
}

<h1 style="text-align:center; color:#0d6efd; margin-bottom:30px;">Admin Dashboard</h1>

<div class="row" style="display:flex; justify-content:center; flex-wrap:wrap; gap:20px;">
    <!-- Karte Produkte -->
    <div class="col-md-4" style="flex:1 1 250px; max-width:300px;">
        <div class="card text-bg-primary mb-3" style="border-radius:15px; box-shadow:0 4px 8px rgba(0,0,0,0.2);">
            <div class="card-body" style="text-align:center;">
                <h5 class="card-title" style="font-weight:bold;">Produkte</h5>
                <p class="card-text fs-3" style="margin:0; color:#000;">@ViewBag.TotalProducts</p>
            </div>
        </div>
    </div>

    <!-- Karte Kategori -->
    <div class="col-md-4" style="flex:1 1 250px; max-width:300px;">
        <div class="card text-bg-success mb-3" style="border-radius:15px; box-shadow:0 4px 8px rgba(0,0,0,0.2);">
            <div class="card-body" style="text-align:center;">
                <h5 class="card-title" style="font-weight:bold;">Kategori</h5>
                <p class="card-text fs-3" style="margin:0; color:#000;">@ViewBag.TotalCategories</p>
            </div>
        </div>
    </div>

    <!-- Karte Users -->
    <div class="col-md-4" style="flex:1 1 250px; max-width:300px;">
        <div class="card text-bg-dark mb-3" style="border-radius:15px; box-shadow:0 4px 8px rgba(0,0,0,0.2);">
            <div class="card-body" style="text-align:center;">
                <h5 class="card-title" style="font-weight:bold;">Users</h5>
                <p class="card-text fs-3" style="margin:0; color:#000;">@ViewBag.TotalUsers</p>
            </div>
        </div>
    </div>
</div>

<hr style="border-top:2px solid #0d6efd; margin:40px 0;" />

<!-- Butonat në një rresht -->
<div style="display:flex; justify-content:center; gap:20px; flex-wrap:wrap; margin-bottom:30px;">

    <a asp-controller="Products" asp-action="Index"
       style="padding:10px 25px; border-radius:10px; font-weight:bold; min-width:150px; text-align:center; background-color:#007bff; color:white; text-decoration:none; box-shadow:0 3px 6px rgba(0,0,0,0.1); transition: all 0.3s ease;"
       onmouseover="this.style.backgroundColor='#0056b3'; this.style.transform='translateY(-2px)';"
       onmouseout="this.style.backgroundColor='#007bff'; this.style.transform='translateY(0)';">
        Menaxho Produkte
    </a>

    <a asp-controller="Categories" asp-action="Index"
       style="padding:10px 25px; border-radius:10px; font-weight:bold; min-width:150px; text-align:center; background-color:#28a745; color:white; text-decoration:none; box-shadow:0 3px 6px rgba(0,0,0,0.1); transition: all 0.3s ease;"
       onmouseover="this.style.backgroundColor='#218838'; this.style.transform='translateY(-2px)';"
       onmouseout="this.style.backgroundColor='#28a745'; this.style.transform='translateY(0)';">
        Menaxho Kategoritë
    </a>

    <a asp-controller="AdminUsers" asp-action="Index"
       style="padding:10px 25px; border-radius:10px; font-weight:bold; min-width:150px; text-align:center; background-color:#343a40; color:white; text-decoration:none; box-shadow:0 3px 6px rgba(0,0,0,0.1); transition: all 0.3s ease;"
       onmouseover="this.style.backgroundColor='#23272b'; this.style.transform='translateY(-2px)';"
       onmouseout="this.style.backgroundColor='#343a40'; this.style.transform='translateY(0)';">
        Menaxho Userat
    </a>

    @if (User.IsInRole("Admin"))
    {
        <a asp-controller="AuditLogs" asp-action="Index"
           style="padding:10px 25px; border-radius:10px; font-weight:bold; min-width:150px; text-align:center; background-color:#dc3545; color:white; text-decoration:none; box-shadow:0 3px 6px rgba(0,0,0,0.1); transition: all 0.3s ease;"
           onmouseover="this.style.backgroundColor='#b71c1c'; this.style.transform='translateY(-2px)';"
           onmouseout="this.style.backgroundColor='#dc3545'; this.style.transform='translateY(0)';">
            Audit Logs
        </a>
    }
</div>
